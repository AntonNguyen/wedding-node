<h1>RSVP</h1>
<form role="form" class="code-search">
  <div class="form-group
    <%if (!success) { %>
      has-error
    <% } %>
    ">
    <label for="code"><%= message %></label>
    <input
      type="number"
      class="form-control input-lg"
      id="code"
      placeholder="4-Digit Code"
      autocomplete="off"
      value="<%= value %>"
      >
  </div>
  <button type="submit" id="search" class="btn btn-primary btn-block btn-lg">Search</button>
</form>